{
  "extends": "@mgslab/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "modules/*"
      ],
      "@/components/*": [
        "components/*"
      ],
      "@/libs/*": [
        "libs/*"
      ],
      "@/server/*": [
        "server/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    /* Find a way to not require this - App files don't belong here. */
    // "../../packages/app-store/routing-forms/env.d.ts",
    "next-env.d.ts",
    "../../packages/types/*.d.ts",
    "../../packages/types/next-auth.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
